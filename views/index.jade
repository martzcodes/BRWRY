doctype html
html(lang='en',ng-app='brwryApp')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
		title BRWRY
		link(rel='stylesheet' href='/stylesheets/style.css')
		link(rel='stylesheet' href='/lib/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet' href='/lib/font-awesome/css/font-awesome.min.css')
		script(src='/socket.io/socket.io.js')
		script(src='/lib/angular/angular.min.js')
		script(src='/lib/angular-bootstrap/ui-bootstrap.min.js')
		script(src='/lib/angular-resource/angular-resource.min.js')
		script(src='/lib/angular-bootstrap/ui-bootstrap-tpls.min.js')
		script(src='/lib/angular-ui-router/release/angular-ui-router.min.js')
		script(src='/js/app.js')
		script(src='/js/controllers.js')
		script(src='/js/services.js')
		script(src='/js/directives.js')
		script(src='/lib/d3/d3.min.js')
	body
		div.container
			div.navbar.navbar-default(role='navigation' data-ng-controller="BrewSetupCtrl")
				div.container-fluid
					div.navbar-header
						button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='#') <i class="fa fa-beer"></i> BRWRY
					div.navbar-collapse.collapse
						ul.nav.navbar-nav
							li
								a(href='#/') Home
							li
								a(href='#/setup') Setup
						ul.nav.navbar-nav.navbar-right
							li(ng-repeat="gpioPin in system.equipment | orderBy:gpioPin.address")
								button.btn.navbar-btn(href='#/' data-ng-click="toggleGPIO(system,gpioPin)" data-ng-class="getEquipmentClass(gpioPin.value)") {{gpioPin.address}} - 
									span(ng-hide="gpioPin.value") Off
									span(ng-show="gpioPin.value") On
							li(ng-repeat="temperature in temperatures")
								a(href='#/' tooltip-placement="bottom" tooltip="{{temperature.sensorname}}") {{temperature.temperature}} &deg;C
							li
								button.btn.btn-danger.navbar-btn(href='#/' data-ng-click="toggleAllGPIO()") All Off!
			div(data-ui-view)